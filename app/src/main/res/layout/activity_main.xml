<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="site.kobatomo.kasi.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink"
        android:alpha="0.3"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/member_image_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="270sp"
                android:layout_height="320sp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40sp"
                android:padding="10sp">
                <WebView
                    android:id="@+id/webview_main"
                    android:layout_width="250sp"
                    android:layout_height="300sp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/question_number_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:text="第1問"
                android:textColor="@color/white"
                android:background="@drawable/shape_rounded_corners_5dp"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_marginTop="280sp"
                android:layout_marginRight="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"

                android:background="@drawable/shape_rounded_corners_5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="スコア"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/score_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/question_main"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/choice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/choices">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_left"
                    android:text="1"/>

                <TextView
                    android:id="@+id/member_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_right"
                    android:text="志田愛佳"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/choice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/choices">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_left"
                    android:text="2"/>

                <TextView
                    android:id="@+id/member_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_right"
                    android:text="志田愛佳"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/choice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/choices">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_left"
                    android:text="3"/>

                <TextView
                    android:id="@+id/member_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_right"
                    android:text="志田愛佳"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/choice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/choices"
                android:layout_marginBottom="0sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_left"
                    android:text="4"/>

                <TextView
                    android:id="@+id/member_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/choices_right"
                    android:text="志田愛佳"/>
            </RelativeLayout>




        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
